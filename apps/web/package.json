{
  "name": "web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "pnpm frontend:build && cargo build --release",
    "build:docker": "cd ../../; docker build -f apps/web/Dockerfile --progress=plain -t mcsl-future-web .; cd -",
    "backend:dev": "cargo run",
    "frontend:dev": "rsbuild dev",
    "frontend:build": "vue-tsc --noEmit && rsbuild build",
    "frontend:preview": "rsbuild preview",
    "lint": "eslint; prettier --check .; cargo lint",
    "fix": "eslint --fix;prettier --write --list-different .; cargo fix",
    "test": "vue-tsc --noEmit && cargo test"
  },
  "dependencies": {
    "@repo/configs": "workspace:*",
    "@repo/shared": "workspace:*",
    "@repo/ui": "workspace:*",
    "@vueuse/core": "^14.2.1",
    "axios": "^1.13.5",
    "dayjs": "^1.11.19",
    "eslint": "^10.0.2",
    "pinia": "^3.0.4",
    "vue": "^3.5.28",
    "vue-i18n": "^11.2.8",
    "vue-router": "^5.0.2",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@rsbuild/core": "^1.7.3",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.2.4"
  }
}
